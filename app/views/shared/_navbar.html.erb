<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <div class="container-fluid">
    <%= link_to root_path, class: "navbar-brand" do %>
      <%= image_tag "bird.png" %>
    <% end %>

      <div class="row justify-content-search">
        <div class="col-sm-12 my-3">
          <%= form_with url: users_path, method: :get, class: "d-flex" do %>
            <%= text_field_tag :query,
                params[:query],
                autocomplete: :off,
                class: "form-control custom-borders height-40",
                placeholder: "Search a friend"
                %>
              <button type="submit" name="" class="btn-search gap-2 nav-search-button d-flex align-items-center height-30">
                <i class="fa-solid fa-magnifying-glass"></i>
                <span>Search</span>
              </button>
          <% end %>
        </div>
      </div>


    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto">
        <% if user_signed_in? %>
          <li class="nav-item active">
            <%= link_to "Dashboard", dashboard_path, class: "nav-link px-4" %>
          </li>

          <li class="nav-item dropdown">
          <a href="#" id="navbarDropdown" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            <%= image_tag "emoji.png", class: "avatar", alt: "dropdown menu"%>
          </a>
            <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
              <%= link_to "My Profile", profile_path, class: "dropdown-item"  %>
              <%= link_to "Friends", friendships_path, class: "dropdown-item"  %>
              <%= link_to "Log out", destroy_user_session_path, data: {turbo_method: :delete}, class: "dropdown-item" %>
            </div>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to "Login", new_user_session_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "Sign up", new_user_registration_path, class: "nav-link" %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
