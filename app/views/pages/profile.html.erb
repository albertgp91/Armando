<div class="bg-#fdeed9" style="min-height: 100vh">
  <div class="container-fluid py-5">
    <div class="row justify-content-center">
      <div class="card shadow col-md-8 p-5 letter-bg ">
        <h1 class="pb-4 letter_title" style="text-align: center" >My profile
          <div>
            <span class="hovertext" data-hover="Change your avatar">
              <%= link_to avatar_path do %>
                <% if @user.avatar_file.present? %>
                  <%= image_tag @user.avatar_file, class: "avatar" %>
                <% else %>
                 <%= image_tag "https://deco-de-heros.com/91943-thickbox_default/masque-en-carton-disney-le-roi-lion-27-cm.webp", class: "avatar_profile" %>
                <% end %>
              <% end %>
            </span>

          </div>
        </h1>
        <div class="row justify-content-center">
          <div class= "d-flex align-items-center p-3">
            <h4 class="profile-header"> Name:</h4>
            <p class= "info">
            <%= @user.user_name %>
            </p>
          </div>
          <div class= "d-flex align-items-center p-3">
            <h4 class="profile-header">Email:</h4>
            <p class= "info">
            <%= @user.email %>
            </p>
          </div>
        </div>
        <div class="row justify-content-center">
          <div class= "d-flex justify-content-center p-3">
            <%= link_to "Edit my profile",edit_user_registration_path, class:"btn-main-edit" %>
          </div>
        </div>

        <div class="row justify-content-center">
          <div class= "d-flex align-items-center p-3">
            <h4 class="profile-header">Your receiving letter day</h4>
            <p class= "info">
              <%= @user.receiving_day.first %>
              </p>
              <h4 class="profile-header">at</h4>
              <p class= "info">
              <%= @user.receiving_time.strftime("%H:%M") %>
            </p>
          </div>
        </div>

        <div class="row justify-content-center">
          <div class= "d-flex justify-content-center p-3">

            <%= link_to "Change my receiving letter day",receiving_day_path, class:"btn-main-edit" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
