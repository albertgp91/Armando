<div class="bg-bisque" style="min-height: 100vh">
  <div class="container-fluid py-5">
    <div class="row justify-content-center">
      <div class="card shadow col-md-8 p-5">
          <h1>You can write your letter below:</h1>

          <%= simple_form_for(@letter) do |f| %>

            <div class="form-inputs">
              <%= f.input :subject %>
              <%= "User will receive your letter X days at Y time" %>
              <%= f.input :content %>
                            <%= f.input :photo, as: :file %>
            </div>
            <div class="form-actions">
              <%= f.submit "Send Letter", class: "btn-main" %>
              <%= link_to "Cancel", inbox_path, class: "btn-secondary" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
