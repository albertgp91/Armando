<div class="bg-bisque" style="min-height: 100vh">
  <div class="container-fluid py-5">
    <div class="row justify-content-center">
      <div class="card shadow col-md-8 p-5">
          <h1>You can write your letter below:</h1>

          <%= simple_form_for(@letter) do |f| %>

            <div class="form-inputs">
              <%= f.input :username %>
              <%= f.input :subject %>
              <%= "#{@user.receiver_name} will receive your letter #{user.reciving_date}" %>
              <%= f.input :content %>
                            <%= f.input :photo, as: :file %>
            </div>
            <div class="form-actions">
              <%= f.submit "Send Letter", class: "btn-goat mainbtn" %>
              <%= link_to "Cancel", letters_path, class: "btn-goat goback" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
