  <div class="container">
    <div class="center d-flex justify-content-center flex-column align-items-center">
    <h1 class="letter_title py-5">Login</h1>
      <div class="form col-6">
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), data: { turbo: :false }) do |f| %>
        <div class="d-flex flex-column shadow rounded-4 yellow-box p-5 mb-5">
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email" } %>
          <%= f.input :password,
                      required: false,
                      input_html: { autocomplete: "current-password" } %>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>

          <div class="form-actions d-flex justify-content-center">
            <%= f.button :submit, "Log in", class:"btn-main m-3"%>
          </div>

          <%= render "devise/shared/links" %>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

</div>
