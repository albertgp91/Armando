

  <div class="container mt-4 all">
    <div class="center d-flex justify-content-center flex-column align-items-center">
      <div class="image">
       <%= image_tag "logo", class: "login", height: 100, width: 150%>
      </div>
      <div class="form">
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), data: { turbo: :false }) do |f| %>
        <div class="form-inputs form-login letter-bg list-group-item">
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email" } %>
          <%= f.input :password,
                      required: false,
                      input_html: { autocomplete: "current-password" } %>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>

        <div class="form-actions d-flex justify-content-center">
          <%= f.button :submit, "Log in", class:"btn-main m-3"%>
        </div>
        <% end %>
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>

</div>
